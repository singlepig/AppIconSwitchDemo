<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.singlepig.demo.appiconswitchdemo">

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppIconSwitchDemo">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppIconSwitchDemo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--双11版-->
        <activity-alias
            android:name=".vip11"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_vip"
            android:label="@string/vip11"
            android:roundIcon="@mipmap/ic_launcher_vip_round"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!--618版-->
        <activity-alias
            android:name=".vip618"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_618"
            android:label="@string/vip618"
            android:roundIcon="@mipmap/ic_launcher_618_round"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
    </application>

</manifest>
